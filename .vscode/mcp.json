{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "inputs": [
    {
      "id": "cyberpanel-host",
      "type": "promptString",
      "description": "CyberPanel server URL (e.g., https://server.example.com:8090)",
      "password": false
    },
    {
      "id": "cyberpanel-username",
      "type": "promptString",
      "description": "CyberPanel admin username (default: admin)",
      "default": "admin",
      "password": false
    },
    {
      "id": "cyberpanel-api-key",
      "type": "promptString",
      "description": "CyberPanel API key (required, from Security > API Keys)",
      "password": true
    }
  ],
  "servers": {
    "cyberpanel": {
      "type": "stdio",
      "command": "npx",
      "args": ["tsx", "src/index.ts"],
      "cwd": "${workspaceFolder}/cyberpanel-mcp",
      "env": {
        "CYBERPANEL_HOST": "${input:cyberpanel-host}",
        "CYBERPANEL_USERNAME": "${input:cyberpanel-username}",
        "CYBERPANEL_API_KEY": "${input:cyberpanel-api-key}"
      }
    }
  }
}
